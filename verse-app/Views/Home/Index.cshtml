@{
    ViewData["Title"] = "Bible Passage Typer";
}
<div class="row">
    <div id="PassagePicker" class="col-md-12">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                <span id="SelectedBook">Book</span>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" id="Book">
            </ul>
        </div>
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                <span id="SelectedChapter">Chapter</span>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" id="Chapter">
                @*<li role="presentation" class="divider"></li>*@
            </ul>
        </div>
        <input type="submit" class="btn btn-default" value="Start" id="Start" />
    </div>
</div>

<div id="PassageTyper" class="row">
    <strong id="Time">Time: 0:00</strong>
    <div class="col-md-12" id="Passage"></div>
    <div class="col-md-12">
        <input type="text" id="TextBox" />
        <input type="submit" class="btn btn-default" value="Submit" id="Submit" />
    </div>
</div>

<div id="EndPage">
        <h3 id="FinalScore" class="text-center"></h3>
        <input type="submit" class="btn btn-default" value="Replay" id="Restart" />
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table" id="History">
                <thead>
                    <tr>
                        <th>Score</th>
                        <th>% Match</th>
                        <th>Verse</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>




