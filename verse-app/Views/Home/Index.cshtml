@{
    ViewData["Title"] = "Scripture Speed Test";
}

<div id="NoMobile" class="row">
    <h1 class="text-center">This App is not intended for mobile use!</h1>
</div>

<div class="row">
    <div class="col-md-3">
        <span id="Title">Scripture</span>
        <p id="Subtitle">Speed Test</p>
    </div>

    <div id="PassagePicker" class="col-md-9 text-right">

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <select class="mdl-textfield__input" id="Book" name="book">
                <option></option>
            </select>
            <label class="mdl-textfield__label" for="book">Book</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <select class="mdl-textfield__input" id="Chapter" name="chapter">
            </select>
            <label class="mdl-textfield__label" for="chapter">Chapter</label>
        </div>

        <button id="Start" class="mdl-button mdl-js-button mdl-button--raised mdl-button--primary mdl-js-ripple-effect" aria-label="Start">Start</button>

    </div>
</div>

<div id="PassageTyper" class="row">
    <div class="col-md-12 text-center">
        <strong id="WPM">WPM: 0</strong>
        <strong id="Time">Time: 0:00</strong>
    </div>
    <div class="col-md-12" id="Passage">
    </div>
    <div class="col-md-12">
        <div class="mdl-textfield mdl-js-textfield" id="TextBoxContainer">
            <input class="mdl-textfield__input" type="text" id="TextBox" aria-label="TextBox">
        </div>
        <button id="Submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--primary mdl-js-ripple-effect" aria-label="Submit">Submit</button>
    </div>
</div>

<div id="EndPage">
    <h3 id="FinalScore" class="text-center"></h3>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="mdl-data-table mdl-js-data-table" id="History">
            <thead>
                <tr>
                    <th>WPM</th>
                    <th>Accuracy</th>
                    <th class="mdl-data-table__cell--non-numeric">Verse</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>




